<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationShare">

    <ImageView
        android:id="@+id/location_details_share_btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="350dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/location_details_share_show_img_qrcode"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:visibility="visible"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/location_details_share_txt_show_sharewithonkonwn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="430dp"
        android:text="share location via QR with unknown travellers"
        android:gravity="center"
        android:textColor="#887E7E"
        android:textSize="18sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/sharehBtn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="25dp"

        android:layout_marginEnd="50dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/rounded_textview"
        android:text="Share with Friends">

    </Button>

</RelativeLayout>