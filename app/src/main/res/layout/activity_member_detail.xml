<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberDetail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_show_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="Name"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="184dp" />

    <TextView
        android:id="@+id/txt_show_member_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phonenumber"
        android:textColor="#B69F9F"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/txt_show_member_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        android:textColor="#422D2D"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_show_member_emergancy_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use this emergency contact when this member in trouble"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:textColor="#DA0D0D" />

    <TextView
        android:id="@+id/txt_show_member_emergancy_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="EmContact"
        android:textColor="#EC0808"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>