<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/currentTripCard"
            android:layout_width="match_parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="120dp"
            app:cardCornerRadius="28dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="visible"
            android:focusable="true">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DFEAF8"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="Current Trip"
                    android:textColor="#233C6F"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="10dp"
                    android:maxHeight="100dp"
                    android:src="@drawable/luggage">

                </ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/seemyTripCard"
            android:layout_width="match_parent"
            android:clickable="true"
            android:visibility="gone"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="120dp"
            app:cardCornerRadius="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/green01"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Trips"
                    android:textSize="30sp"
                    android:textColor="#233C6F"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:maxHeight="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/luggage"
                    android:layout_marginLeft="230dp"

                    ></ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/nearbyHotelsTripCard"
            android:layout_width="match_parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="120dp"
            app:cardCornerRadius="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#405E03F3"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearby Hotels"
                    android:textSize="30sp"
                    android:textColor="#233C6F"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:maxHeight="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/building"
                    android:layout_marginLeft="230dp"

                    ></ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/emCard"
            android:layout_width="match_parent"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_height="120dp"
            app:cardCornerRadius="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40F3032E"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency"
                    android:textSize="30sp"
                    android:textColor="#233C6F"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"/>
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:maxHeight="100dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/emergency_contact"
                    android:layout_marginLeft="230dp"

                    ></ImageView>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>










</LinearLayout>

